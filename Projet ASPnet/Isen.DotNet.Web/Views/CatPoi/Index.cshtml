@using Isen.DotNet.Library.Models.Implementation;
@{
    ViewData["Title"] = "CatPoi";
}
@model IEnumerable<CatPoi>

<div class="row">
    <div class="col-md-12">
        <h1>Catégories Poi <small>/catégorie/index</small></h1>
    </div>
</div>
<div class="row">
    <a class="btn btn-default" 
        asp-controller="CatPoi" asp-action="Detail">Ajouter une catégorie...</a>
</div>
<div class="row">
    <table class="table table-striped">
        <thead>
            <tr>
                <th>#Id</th>
                <th>Catégorie</th>
                <th>Description</th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach(var catpoi in Model)
            {
            <tr>
                <td>@catpoi.Id</td>
                <td>@catpoi.Name</td>
                <td>@catpoi.Description</td>
                <td>
                    <a class="btn btn-default" 
                        asp-controller="CatPoi" 
                        asp-action="Detail" 
                        asp-route-id="@catpoi.Id">Editer</a>
                &nbsp;
                </tr>
            }
        </tbody>
    </table>
</div>